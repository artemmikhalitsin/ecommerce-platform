<!doctype html>

<html>
  <head>
    <title> Login </title>
    <!-- <script src = "js/login.js"></script> -->
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>

  </head>

  <body ng-app="">
    <div ng-include="'includes/header.hbs'"></div></br></br>
    <div class="container">
      <div class="row justify-content-center">
        <div class="card" style="width: 30rem;">
          <h3 class="card-header text-center">Login</h3>
        	<div class="card-block"></br>
              <form class="form-horizontal" role="form" method="POST" action="/loginRequest">
                <div class="form-group">
                  <label class="col-lg-12 col-md-12 control-label">Email address</label>
                  <div class="col-md-12">
                    <input type="email" class="form-control" name="email" placeholder="Enter email">
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-md-12 control-label">Password</label>
                  <div class="col-md-12">
                    <input type="password" class="form-control" name="password" placeholder="Password">
                  </div>
                </div>
                <div class="form-group col-md-12">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
          </div>
        </div>
    </div>
  </div>

  <div ng-include="'includes/footer.hbs'"></div>

  </body>
  </html>

<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Registration Page</title>
  <link href="css/bootstrap.min.css" rel="stylesheet">
  <link href="css/heroic-features.css" rel="stylesheet">
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  <script type="text/javascript" src="/js/validations/jquery.validate.js"></script>
  <script type="text/javascript" src="/js/validations/registration.js"></script>
</head>
<body ng-app="">
  <div ng-include="'includes/header.hbs'" ng-init="isAdmin = {{session.isAdmin}}; exists = {{session.exists}}"></div>
  <div class="container">
    <header class="jumbotron my-4">
      <h1 class="display-4">Registration</h1>
    </header>
  	  <div class="row justify-content-center">
		     <div class="card" style="width: 30rem;">
           <div class="card-block"></br>
			       <form id="registrationForm" class="form-horizontal" role ="form" method="POST" action="/registrationRequest" name="registration_form">
               <div class="form-group">
                 <label class="col-lg-12 col-md-12 control-label">First name</label>
                 <div class="col-md-12">
                   <input class="form-control" type="text" name="first_name" placeholder="First name">
                 </div>
               </div>
               <div class="form-group">
                 <label class="col-md-12 control-label">Last name</label>
                 <div class="col-md-12">
                   <input type="text" class="form-control" name="last_name" placeholder="Last name">
                 </div>
               </div>
               <div class="form-group">
                 <label class="col-lg-12 col-md-12 control-label">Email address</label>
                 <div class="col-md-12">
                   <input class="form-control" type="email" name="email" placeholder="example@example.com">
                 </div>
               </div>
               <div class="form-group">
                 <label class="col-lg-12 col-md-12 control-label">Full address</label>
                 <div class="col-md-12">
                   <input type="text" class="form-control" name="full_address" placeholder="123 main street">
                 </div>
               </div>
               <div class="form-group">
                 <label class="col-lg-12 col-md-12 control-label">Phone number</label>
                 <div class="col-md-12">
                   <input class="form-control" name="phone_number" placeholder="10 digits, no dashes(-) allowed">
                 </div>
               </div>
               <div class="form-group">
                 <label class="col-md-12 control-label">Password</label>
                 <div class="col-md-12">
                   <input id="password" pattern="\S+" type="password" class="form-control" name="password" placeholder="Password (no spaces allowed)">
                 </div>
               </div>
               <div class="form-group">
                 <label class="col-md-12 control-label">Confirm password</label>
                 <div class="col-md-12">
                   <input type="password" pattern="\S+" class="form-control" name="confirmPassword" placeholder="Confirm password (no spaces allowed)">
                 </div>
               </div>
               <div class="form-group col-md-12">
			           <button type="submit" class="btn btn-primary">Create account</button>
               </div>
			       </form>
           </div>
         </div>
       </div>
     </div>
	 <div ng-include="'includes/footer.hbs'"></div>
  </body>
</html>
